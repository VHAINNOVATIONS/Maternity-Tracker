@using VA.Gov.Artemis.UI.Data.Models
@using VA.Gov.Artemis.UI.Data.Models.Notes
@model TiuNoteModel

@{
    ViewBag.Title = "MCC Dashboard - Create Addendum";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h1 class="h3 page-header">Create Addendum</h1>

@*@{Html.RenderPartial("~/Views/Shared/_PatientBlock.cshtml", (BasePatient)Model.Patient);}*@

@using (Html.BeginForm("CreateAddendum", "Notes", FormMethod.Post, new { @role = "form", @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div>

        @Html.HiddenFor(m => m.Patient.Dfn)
        @Html.HiddenFor(m => m.Note.Ien)
        
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="Note_NoteText">Addendum Text:</label>
                    @Html.TextAreaFor(m => m.Note.NoteText, new {@class="form-control", @rows = "10", @style="whitespace: pre; font-family: Courier"})
                </div>

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="pull-right">
                    <button type="button" class="btn btn-default" onclick="window.history.back();">Cancel</button>
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>
        </div>
    </div>
}
<br />

@section Navigation
{
    @{Html.RenderPartial("~/Views/Shared/_NavGroupPatient.cshtml", Model.Patient);}
}
