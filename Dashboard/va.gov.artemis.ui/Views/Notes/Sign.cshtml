@model VA.Gov.Artemis.UI.Data.Models.Notes.SignNoteModel

@{
    ViewBag.Title = "MCC Dashboard - Sign Notes";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h1 class="h3 page-header">Sign Dashboard Note</h1>

@using (Html.BeginForm("Sign", "Notes", FormMethod.Post, new { @role = "form", @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div>

        @Html.HiddenFor(m => m.Patient.Dfn)
        @Html.HiddenFor(m => m.NoteIen)
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Esig">Signature Code:</label>
                    @Html.PasswordFor(m => m.Esig, new {@class="form-control"})
                </div>

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="pull-right">
                    <button type="button" class="btn btn-default" onclick="window.history.back();">Cancel</button>
                    <input type="submit" class="btn btn-primary" value="Sign" />
                </div>
            </div>
        </div>
    </div>
}

<br />

@section Navigation
{
    @{Html.RenderPartial("~/Views/Shared/_NavGroupPatient.cshtml", Model.Patient);}
}


