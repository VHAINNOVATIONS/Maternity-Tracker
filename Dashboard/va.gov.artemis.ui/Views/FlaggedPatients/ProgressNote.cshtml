@using VA.Gov.Artemis.UI.Data.Models
@using VA.Gov.Artemis.UI.Data.Models.Common
@model VA.Gov.Artemis.UI.Data.Models.Notes.TiuNoteModel

@{
    ViewBag.Title = "MCC Dashboard - Progress Note";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h1 class="h3 page-header">Progress Note</h1>
@{Html.RenderPartial("~/Views/Shared/_PatientBlock.cshtml", (BasePatient)Model.Patient);}

<br />
<pre id="intro-message">@Model.Note.NoteText</pre>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <button type="button" class="btn btn-default" onclick="location.href='@Model.ReturnUrl'">Return to List</button>
            <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Details", "FlaggedPatients", new { dfn = @Model.Patient.Dfn })'">Return to Details</button>
            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Accept", "Track", new { dfn = Model.Patient.Dfn })'">Accept</button>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Reject", "Track", new { dfn = Model.Patient.Dfn })'">Reject</button>
        </div>
    </div>
</div>

<br />

@section Navigation
{
    @{Html.RenderPartial("~/Views/Shared/_NavGroupTracking.cshtml");}
}
